#!/bin/bash
set -evu

# Usage:
#
# build-test [mypy|nomypy]
#
# Arguments:
# - mypy: include mypy check ("mypy" or "nomypy")
#
# Environment variables used:
# - GITHUB_WORKSPACE: workspace directory
#
# WARNING: running this locally will delete any local files that
# aren't strictly part of the git tree, including gitignored files!

MODULE=pytket-custatevec

MYPY=$1

PLAT=`python -c 'import platform; print(platform.system())'`

PYVER=`python -c 'import sys; print(".".join(map(str, sys.version_info[:2])))'`

git clean -dfx

echo "Module to test: ${MODULE}"

MODULEDIR="${GITHUB_WORKSPACE}"
ARTIFACTSDIR=${GITHUB_WORKSPACE}/wheelhouse

rm -rf ${ARTIFACTSDIR} && mkdir ${ARTIFACTSDIR}

python -m pip install --upgrade pip wheel build

# 1. Build the package (sdist and wheel)
python -m build

# 2. Install dependencies for testing from your pyproject.toml
#    Note: We install these *before* your wheel.
python -m pip install .[test]

# 3. Install the wheel you just built.
#    This is a clean, non-editable installation.
#    The `.` tells pip to find the wheel in the dist/ directory.
python -m pip install .

# 4. Verify the installation (optional but recommended)
echo "--- Verifying final installation ---"
pip list
python -c "import cuquantum.custatevec; print('Successfully imported cuquantum.custatevec')"
echo "------------------------------------"

# 5. Run pytest from the root, targeting the tests directory
pytest tests/

# 6. Run mypy check if needed
if [[ "${MYPY}" = "mypy" ]]
then
    python -m pip install "mypy==1.17.1"
    ${GITHUB_WORKSPACE}/mypy-check ${GITHUB_WORKSPACE}
fi
